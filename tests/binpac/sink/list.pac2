module Mini;

export type Main = unit {
    var data : sink;

    a: bytes &length=2 -> self.data;

    b: bytes &length=5 {
        self.data.write(self.b);
    }

    c: bytes &length=1 -> self.data;


    on %init {
        self.data.connect(new Sub());
    }

    on %done {
        self.data.close();
    }
};

export type Sub = unit {
    r: list<Entry> &transient;
};

type Entry = unit {
    a: uint16 {
        print self.a;
    }
};
